---
import BaseLayout from "~layouts/BaseLayout.astro";
import ExperienceInfo from "~components/about/ExperienceInfo.astro";
---

<BaseLayout>
  <div class="flex flex-col items-center gap-6">
    <div class="card w-1/2 bg-base-100 shadow-xl">
      <figure><img src="/MyPicture.jpg" alt="My Picture" class="content-center"/></figure>
      <div class="card-body">
        <h2 class="card-title">About Me!</h2>
        <p>My name is Jeff Anderson. I am a Senior studying Computer Science at Utah State University and will be graduating with my Bachelors end of June 2023. I am currently working at USU Aspire as a Software Engineer.</p>
      </div>
    </div>
    <div class="card w-1/2 bg-base-100 shadow-xl">
